{
	"$schema": "https://opencode.ai/config.json",
	"model": "anthropic/claude-sonnet-4-5",
	"small_model": "anthropic/claude-haiku-4-5",
	"autoupdate": true,
	"compaction": {
		"auto": true,
		"prune": true
	},
	"permission": {
		"edit": "ask",
		"bash": {
			"*": "ask",
			"git *": "allow",
			"npm *": "allow",
			"pnpm *": "allow",
			"bun *": "allow",
			"ls *": "allow",
			"rm *": "deny"
		},
		"webfetch": "allow"
	}
}
